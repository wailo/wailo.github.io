{
  "name": "v3_personal_page",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "docker:up": "docker compose up -d",
    "check": "vue-tsc -b",
    "docker:down": "docker compose down || true",
    "dev": "npm run docker:up && 'npm run docker:down' EXIT; vite",
    "build": "npm run build:emscripten && vue-tsc -b && vite build",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist -b master",
    "build:emscripten": "git -C node_modules/Compact-Flight-Simulator checkout 48543be && ./node_modules/Compact-Flight-Simulator/build_wasm.sh && cp -a node_modules/Compact-Flight-Simulator/build_wasm_*/bin/flightsimulator* public/",
    "preinstall": "[ -z \"$ACCESS_TOKEN\" ] && set -a && . .env && set +a; git clone https://oauth2:$ACCESS_TOKEN@github.com/wailo/Compact-Flight-Simulator.git node_modules/Compact-Flight-Simulator"
  },
  "dependencies": {
    "fuse.js": "^7.1.0",
    "marked": "^15.0.11",
    "monaco-editor-vue3": "^1.0.5",
    "peerjs": "^1.5.4",
    "pocketbase": "^0.26.1",
    "uplot": "^1.6.32",
    "vue": "^3.5.28",
    "vue-qr": "^4.0.9",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.4",
    "autoprefixer": "^10.4.19",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.39",
    "prettier": "3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vite-plugin-checker": "^0.9.3",
    "vue-tsc": "^2.0.21"
  }
}
