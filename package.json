{
  "name": "v3_personal_page",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:start": "docker run --rm --name peerjs -p 9000:9000 -d peerjs/peerjs-server",
    "dev:stop": "docker stop peerjs || true",
    "dev": "npm run dev:start && trap 'npm run dev:stop' EXIT; vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "monaco-editor-vue3": "^0.1.10",
    "peerjs": "^1.5.4",
    "vue": "^3.4.29",
    "vue-qr": "^4.0.9"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.5",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "prettier": "3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vue-tsc": "^2.0.21"
  }
}
